<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shadow4.dnddamagecalculator.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DamageDie"
        app:layout_constraintTop_toBottomOf="@+id/damageformulaentry"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/damageformulaentry"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/DiceEntryField"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/extradicecheckbox"
        android:layout_width="155dp"
        android:layout_height="0dp"
        android:text="@string/use_superiority_die"
        app:layout_constraintLeft_toRightOf="@+id/extradiceentry"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="174dp"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/superiority_die"
        app:layout_constraintTop_toBottomOf="@+id/extradiceentry"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/extradiceentry"
        android:layout_width="138dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="1d8"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="174dp"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/savageattackcheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Savage attack?"
        app:layout_constraintLeft_toRightOf="@+id/damageformulaentry"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp" />

    <EditText
        android:id="@+id/presetname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preset Name"
        app:layout_constraintTop_toBottomOf="@+id/presetname"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/calculatedamagebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate Damage"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="329dp"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Great Weapon Fighting Rerolls"
        app:layout_constraintTop_toBottomOf="@+id/gwfrerolls"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <EditText
        android:id="@+id/gwfrerolls"
        android:layout_width="179dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="1,2"
        android:layout_marginTop="255dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <CheckBox
        android:id="@+id/gwfrerollscheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do Rerolls"
        app:layout_constraintLeft_toRightOf="@+id/gwfrerolls"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="255dp" />

    <Spinner
        android:id="@+id/presetSpinner"
        android:layout_width="319dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="448dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preset Slot"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="431dp" />

    <Button
        android:id="@+id/savePresetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Preset"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="506dp" />

    <Button
        android:id="@+id/loadPresetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Preset"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="506dp" />

</android.support.constraint.ConstraintLayout>
